<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="java.util.Map"/>
        <import type="com.druk.bonjour.browser.dnssd.BonjourService"/>
        <import type="com.druk.bonjour.browser.BonjourApplication"/>
        <variable name="service" type="com.druk.bonjour.browser.dnssd.BonjourService"/>
        <variable name="description" type="java.lang.String"/>
    </data>
    <TwoLineListItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/listPreferredItemHeight"
        android:mode="twoLine"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text='@{service.serviceName + "." + service.getRegTypeParts()[0] + "." + (description != null ? " (" + description + ")" : "")}'/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_alignStart="@id/text1"
            android:layout_alignLeft="@id/text1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text='@{(service.dnsRecords[BonjourService.DNS_RECORD_KEY_SERVICE_COUNT] ?? "0") + " services"}'/>

    </TwoLineListItem>
</layout>